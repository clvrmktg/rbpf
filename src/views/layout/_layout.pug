doctype html

include ../_var
include ../utils/_mixins
include ../utils/_picture
include ../utils/_icons
include ../utils/_obscure

block var

html#page(lang='en' prefix="og: https://ogp.me/ns#")
  
  head
  
    meta(http-equiv="Content-Type", content="text/html;charset=UTF-8")
    
    //- Site Title
    title= homepage ? `${siteName} | ${homepageSuffix}`:`${pageTitle} | ${siteName}`
    
    //- Site Description
    meta(name='description' content=description)
    
    //- Responsive Tag
    meta(name='viewport', content='width=device-width, initial-scale=1.0, viewport-fit=cover')

    // Google hreflang Tag
    link(rel='canonical', href=`${siteUrl}`)
    
    //- // Preconnect
    //- link(rel='preconnect', href='')
    link(rel='prefetch' href='https://royalbpf.twic.pics/?v1')
    
    -
      images = [
        {path:'commissioner-fernander-majority-rule', alt:'Commissioner Clayton Fernander at Majority Rule church service', position: 'top-right'},
        {path:'rbpf-funeral-salute', alt:'ACP saluting fallen officer before committal', position: 'top'},
        {path:'commissioner-fernander-governor-general-cynthia-pratt', alt:'Commissioner Fernander greeting Her Excellency, Governor General of The Bahamas, Cynthia Pratt', position: 'top-right'},
        
      ]

    each img, index in images 
      +preview(img.path)
  
    //- CSS Loading
    - hash = new Date().getTime()

    //- https://www.filamentgroup.com/lab/critical-cdn.html
    //- CSS — START
    if pro    
      link(rel='preload' href='styles/style-version.min.css' as='style')
      link(type='text/css' rel='stylesheet' href='styles/style-version.min.css')

    if !pro
      link(rel='preload' href= `/styles/style.css?${hash}` as='style')
      link(type='text/css' rel='stylesheet' href=`/styles/style.css?${hash}`)
    //- CSS — END
    
    // Site Scripts — START
    script(src='https://cdn.jsdelivr.net/npm/alpinejs@2.8.2/dist/alpine.min.js' defer) 
    script(defer src='https://royalbpf.twic.pics/?v1')
    +script('app', true, true, false)
    // Site Scripts — END

    // No Script Styles – START
    noscript
      style.
        .script {display: none}
    // No Script Styles – START

    // Site Favicons - START
    //- https://medium.com/swlh/are-you-using-svg-favicons-yet-a-guide-for-modern-browsers-836a6aace3df
    //- link(rel='icon' href='/favicons/favicon.svg')
    //- link(rel="mask-icon", href="/favicons/safari-pinned-tab.svg", color="#5bbad5")
    //- link(rel="apple-touch-icon", sizes="180x180", href="/favicons/apple-touch-icon.png")
    //- link(rel="manifest", href="/favicons/manifest.json")
    //- meta(name="theme-color", content="#ffffff")
    // Site Favicons - END
      
  body(class='[ grid g--0 ]')
    
    //-  Include Site Header
    include _header
    
    block content
    
    //- Include Site Footer
    include _footer
    +script('obscure', false, false, true)

    block footer
      